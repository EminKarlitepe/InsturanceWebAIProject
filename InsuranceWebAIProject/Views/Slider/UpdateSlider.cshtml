@model InsuranceWebAIProject.Models.DataModel.Slider

@{
    ViewBag.Title = "Slider Güncelle";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>Slider Güncelle</h2>

@using (Html.BeginForm("UpdateSlider", "Slider", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.SliderId)

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.SliderTitle)
        @Html.TextBoxFor(m => m.SliderTitle, new { @class = "form-control", placeholder = "Başlık" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.SliderSubtitle)
        @Html.TextBoxFor(m => m.SliderSubtitle, new { @class = "form-control", placeholder = "Alt Başlık" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.SliderDescription)
        @Html.TextAreaFor(m => m.SliderDescription, new { @class = "form-control", rows = 3, placeholder = "Açıklama" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.SliderImageUrl)
        @Html.TextBoxFor(m => m.SliderImageUrl, new { @class = "form-control", placeholder = "Resim URL" })
    </div>

    <button type="submit" class="btn btn-success mt-3">Güncelle</button>
}

<style>
    .form-group label {
        font-weight: 500;
        color: #555;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 12px 15px;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.03);
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.15);
        }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        transition: background-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
        margin-top: 20px;
        color: white;
        cursor: pointer;
    }

        .btn-success:hover {
            background-color: #27ae60;
            border-color: #27ae60;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3);
        }

    h2 {
        color: #34495e;
        margin-bottom: 30px;
        font-weight: 600;
        text-align: center;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }
</style>
