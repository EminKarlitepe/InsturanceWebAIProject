@model List<InsuranceWebAIProject.Models.DataModel.Contact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>İletişim Listesi</h2>
<a href="@Url.Action("CreateContact", "Contact")" class="btn btn-primary mb-3">Yeni İletişim Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Adres</th>
            <th>Mail</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Adress</td>
                <td>@item.Mail</td>
                <td>@item.Telephone</td>
                <td>
                    <a href="@Url.Action("UpdateContact", "Contact", new { id = item.CommunicationId })" class="btn btn-warning btn-sm">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
