@model InsuranceWebAIProject.Models.DataModel.Feature

@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>Özelliği Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.FeatureId)

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.FeatureCardTitle)
        @Html.TextBoxFor(m => m.FeatureCardTitle, new { @class = "form-control", placeholder = "Başlık" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.FeatureCardDescription)
        @Html.TextAreaFor(m => m.FeatureCardDescription, new { @class = "form-control", placeholder = "Açıklama" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.FeatureCardIcon)
        @Html.TextBoxFor(m => m.FeatureCardIcon, new { @class = "form-control", placeholder = "İkon" })
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success mt-3">Güncelle</button>
    </div>
}

<style>
    .form-group label {
        font-weight: 500;
        color: #555;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 12px 15px;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.03);
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .form-control:focus {
            border-color: #2ecc71;
            box-shadow: 0 0 0 0.25rem rgba(46, 204, 113, 0.15);
        }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        transition: background-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
        margin-top: 20px;
        color: white;
    }

        .btn-success:hover {
            background-color: #27ae60;
            border-color: #27ae60;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3);
            color: white;
        }

    h2 {
        color: #34495e;
        margin-bottom: 30px;
        font-weight: 600;
        text-align: center;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }
</style>
