﻿@model List<InsuranceWebAIProject.Models.DataModel.Feature>

@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>Özellik Listesi</h2>
<a href="@Url.Action("CreateFeature", "Feature")" class="btn btn-primary mb-3">Yeni Özellik Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İkon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FeatureCardTitle</td>
                <td>@item.FeatureCardDescription</td>
                <td><i class="@item.FeatureCardIcon"></i></td>
                <td>
                    <a href="@Url.Action("UpdateFeature", "Feature", new { id = item.FeatureId })" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="@Url.Action("DeleteFeature", "Feature", new { id = item.FeatureId })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>