﻿@model List<InsuranceWebAIProject.Models.DataModel.About>

@{
    ViewBag.Title = "About Listesi";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>About Listesi</h2>

<a href="@Url.Action("CreateAbout", "About", new { area = "Admin" })" class="btn btn-primary mb-3">Yeni About Ekle</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Alt Başlık</th>
            <th>İlk Açıklama</th>
            <th>İkinci Açıklama</th>
            <th>Slogan 1</th>
            <th>Slogan 2</th>
            <th>Slogan 3</th>
            <th>Sigorta Sayısı</th>
            <th>Ödüller</th>
            <th>Uzman Sayısı</th>
            <th>Takım Üyesi Sayısı</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutId</td>
                <td>@item.AboutTitle</td>
                <td>@item.AboutSubtitle</td>
                <td>@item.AboutDescription1</td>
                <td>@item.AboutDescription2</td>
                <td>@item.AboutSlogan1</td>
                <td>@item.AboutSlogan2</td>
                <td>@item.AboutSlogan3</td>
                <td>@item.InsurancePoliciesCount</td>
                <td>@item.AwardsCount</td>
                <td>@item.SkilledAgentsCount</td>
                <td>@item.TeamMembersCount</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Resim" style="width:80px; height:50px; object-fit:cover;" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("UpdateAbout", "About", new { id = item.AboutId, area = "Admin" })" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="@Url.Action("DeleteAbout", "About", new { id = item.AboutId, area = "Admin" })" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>