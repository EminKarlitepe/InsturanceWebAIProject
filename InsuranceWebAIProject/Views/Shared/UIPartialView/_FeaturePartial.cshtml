@model List<InsuranceWebAIProject.Models.ViewModels.FeatureViewModel>

<div class="container-fluid feature bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Öne Çıkan Hizmetlerimiz</h4>
            <h1 class="display-4 mb-4">Güvenle Yarınlara Hazırlanın</h1>
            <p class="mb-0">
                Müşterilerimizin hayatını ve değerlerini korumak için kapsamlı ve kişiye özel sigorta çözümleri sunuyoruz. Deneyimli ekibimizle her zaman yanınızdayız.
            </p>
        </div>
        <div class="row g-4">
            @foreach (var feature in Model)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="feature-item p-4 pt-0">
                        <div class="feature-icon p-4 mb-4">
                            <i class="fas @feature.FeatureCardIcon fa-3x"></i>
                        </div>
                        <h4 class="mb-4">@feature.FeatureCardTitle</h4>
                        <p class="mb-4">@feature.FeatureCardDescription</p>
                        <a class="btn btn-primary rounded-pill py-2 px-4" href="#">Learn More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
