﻿@model List<InsuranceWebAIProject.Models.ViewModels.TestimonialViewModel>

<div class="container-fluid testimonial pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Müşteri Yorumları</h4>
            <h1 class="display-4 mb-4">Müşterilerimiz Ne Diyor?</h1>
            <p class="mb-0">Müşteri memnuniyeti bizim için her şeyden önce gelir. İşte sigorta hizmetlerimizden faydalanan bazı müşterilerimizin görüşleri:</p>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.2s">
            @foreach (var item in Model)
            {
                <div class="testimonial-item bg-light rounded">
                    <div class="row g-0">
                        <div class="col-4 col-lg-4 col-xl-3">
                            <div class="h-100">
                                <img src="@item.TestimonialImageUrl" class="img-fluid h-100 rounded" style="object-fit: cover;" alt="@item.TestimonialName" />
                            </div>
                        </div>
                        <div class="col-8 col-lg-8 col-xl-9">
                            <div class="d-flex flex-column my-auto text-start p-4">
                                <h4 class="text-dark mb-0">@item.TestimonialName @item.TestimonialSurname</h4>
                                <p class="mb-3">@item.TestimonialJob</p>
                                <div class="d-flex text-primary mb-3">
                                    @{
                                        int stars = 5;
                                        int point = 0;
                                        if (int.TryParse(item.TestimonialPoint, out int result))
                                        {
                                            point = result;
                                        }
                                        for (int i = 1; i <= stars; i++)
                                        {
                                            if (i <= point)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-star text-body"></i>
                                            }
                                        }
                                    }
                                </div>
                                <p class="mb-0">@item.TestimonialComment</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>