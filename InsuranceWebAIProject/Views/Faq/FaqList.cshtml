﻿@model List<InsuranceWebAIProject.Models.DataModel.FAQs>

@{
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>Sık Sorulan Sorular</h2>

<a href="@Url.Action("CreateFaq", "Faq")" class="btn btn-primary mb-3">Yeni Soru Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Soru</th>
            <th>Cevap</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.QuestionId</td>
                <td>@item.Questioon</td>
                <td>@item.Answer</td>
                <td>
                    <a href="@Url.Action("UpdateFaq", "Faq", new { id = item.QuestionId })" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="@Url.Action("DeleteFaq", "Faq", new { id = item.QuestionId })" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>