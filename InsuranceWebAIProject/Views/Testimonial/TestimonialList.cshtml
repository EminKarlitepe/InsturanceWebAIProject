﻿@model List<InsuranceWebAIProject.Models.DataModel.Testimonial>

@{
    ViewBag.Title = "Referanslar";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<h2>Referanslar</h2>

<a href="@Url.Action("CreateTestimonial", "Testimonial")" class="btn btn-primary mb-3">Yeni Referans Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Görev</th>
            <th>Puan</th>
            <th>Yorum</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TestimonialId</td>
                <td>@item.TestimonialName</td>
                <td>@item.TestimonialSurname</td>
                <td>@item.TestimonialJob</td>
                <td>@item.TestimonialPoint</td>
                <td>@item.TestimonialComment</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.TestimonialImageUrl))
                    {
                        <img src="@item.TestimonialImageUrl" alt="Fotoğraf" style="width:50px; height:50px; object-fit:cover;" />
                    }
                </td>
                <td>
                    <a href="@Url.Action("UpdateTestimonial", "Testimonial", new { id = item.TestimonialId })" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="@Url.Action("DeleteTestimonial", "Testimonial", new { id = item.TestimonialId })" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>